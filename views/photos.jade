extends ./layout.jade

block content
  h1 Instagram
  form(enctype="multipart/form-data", action="/#{id}/photos",method="POST")
    input(type="text",name="title",placeholder="Enter Title",class="photoTitle")
    br
    input(type="file",name="upload",multiple="multiple",class="photoFile")
    br
    input(type="submit",class="photoAdd") 
    input(type="hidden",name="userId",value="#{id}",class="photoId")

  ol
    each photo in photos
      li Title: #{photo.title}
      li Image: 
        img(src="#{photo.src}")
      li Likes: #{photo.likes}       

  script(src="/js/jquery.min.js") 
  script(src="/js/addPhoto.js")